<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:background="@android:color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/background_dark"
        >

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scrollbars="vertical"
            android:textSize="8sp"
            android:maxLines="255"
            android:textColor="@android:color/white"
            android:text=""/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">


                <TableRow>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickReset"
                        android:text="reset" />
                </TableRow>
                <TableRow>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickRotate"
                        android:text="apply rotate" />

                    <SeekBar
                        android:id="@+id/rotate_seekbar"
                        android:max="48"
                        android:progress="24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="0.00"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTranslateX"
                        android:text="apply tr X" />

                    <SeekBar
                        android:id="@+id/translate_x_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="0.00"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTranslateY"
                        android:text="apply tr Y" />

                    <SeekBar
                        android:id="@+id/translate_y_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="0.00"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickScaleX"
                        android:text="apply sc X" />

                    <SeekBar
                        android:id="@+id/scale_x_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="0.00"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickScaleY"
                        android:text="apply sc Y" />

                    <SeekBar
                        android:id="@+id/scale_y_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="0.00"/>
                </TableRow>

            </TableLayout>
        </ScrollView>


        <com.example.likebebop.matrixtest.MatrixView
            android:background="@android:color/background_light"
            android:id="@+id/matrix_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


    </LinearLayout>
</LinearLayout>
